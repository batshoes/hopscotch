<div class="games_edit">
    <%= render 'shared/nav' %>
    <div id="circles">
    <div id = "circle3">
      <div id = "circle">
        <%= form_for @game do |g| %>

        <% if @game.errors.any? %>
            <% @game.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          <% end %>

          <div class="game_edit1">
            <h2>Edit Game</h2>
            <%= g.label name="Title" %></br>
            <%= g.text_field :title %> </br>
            <%= g.label name="Description" %></br>
            <%= g.text_field :description, :maxlength => "25" %> </br></br>
            <%= g.label name="Category" %>
            <%= g.select(:category) do %>
              <% ['TV', 'Movies', 'Sports', 'Cards', 'Other']. each do |c| -%>
            <%= content_tag(:option, c) %>
            <% end %>
            <% end %>
          
          </br>
          </br>
          <div id = "new_rule">
          <%= g.fields_for :rules do |builder| %>
            <div class="adding_rule">
              <%= builder.label name="Drink" %>
                <%= builder.select(:drink) do %>
                  <% ['Full Beer', 'Half Beer', 'Sip O\'beer', 'SHOTZ']. each do |c| -%>
                    <%= content_tag(:option, c) %>
                  <% end %>
                <% end %>

        </div>
              <%= builder.text_field :rules, :placeholder => "Rules" %></br>
              <%= builder.hidden_field :_destroy %>
              <%= link_to "remove", game_rule_path(params[:id],builder.object.id), method: :delete %>
          </div>
        <% end %>
        <button type="button" id="add_rule">Add Rule</button>
        <%= g.submit :submit %>
        


<% end %>
</div>
</div>
</div>
</div>
</div>